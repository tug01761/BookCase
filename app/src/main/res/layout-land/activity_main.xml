<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="270dp"
        android:layout_height="32dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stopBtn"
        app:layout_constraintTop_toBottomOf="@+id/searchBtn" />

    <Button
        android:id="@+id/stopBtn"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="25dp"
        android:text="@string/stop"
        app:layout_constraintStart_toEndOf="@+id/pauseBtn"
        app:layout_constraintTop_toBottomOf="@+id/searchInput" />

    <Button
        android:id="@+id/pauseBtn"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="14dp"
        android:text="@string/pause"
        app:layout_constraintStart_toEndOf="@+id/fl_1"
        app:layout_constraintTop_toBottomOf="@+id/searchInput" />

    <FrameLayout
        android:id="@+id/fl_1"
        android:layout_width="202dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_2"
        android:layout_width="530dp"
        android:layout_height="285dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fl_1">

    </FrameLayout>

    <EditText
        android:id="@+id/searchInput"
        android:layout_width="225dp"
        android:layout_height="47dp"
        android:layout_marginStart="14dp"
        android:ems="10"
        android:inputType="textShortMessage"
        app:layout_constraintStart_toEndOf="@+id/fl_1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@android:string/search_go"
        app:layout_constraintStart_toEndOf="@+id/searchInput"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nowPlaying"
        android:layout_width="82dp"
        android:layout_height="19dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"
        android:text="@string/now_playing"
        app:layout_constraintEnd_toStartOf="@+id/nowPlayingBookTitle"
        app:layout_constraintStart_toEndOf="@id/fl_1"
        app:layout_constraintTop_toBottomOf="@+id/pauseBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nowPlayingBookTitle"
        android:layout_width="336dp"
        android:layout_height="22dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="40dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nowPlaying"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>